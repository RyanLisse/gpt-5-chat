import { StockChartMessage } from '../stock-chart-message';

type StockChartToolPartProps = {
  part: Extract<
    import('@/lib/ai/types').ChatMessage['parts'][number],
    { type: 'tool-stockChart' }
  >;
};

export function StockChartToolPart({ part }: StockChartToolPartProps) {
  const { toolCallId, state } = part;

  if (state === 'input-available') {
    const { input } = part;
    return (
      <div key={toolCallId}>
        <StockChartMessage args={input} result={null} />
      </div>
    );
  }

  if (state === 'output-available') {
    const { output, input } = part;
    return (
      <div key={toolCallId}>
        <StockChartMessage args={input} result={output} />
      </div>
    );
  }

  return null;
}